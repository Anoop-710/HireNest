{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./backend/src",
    "moduleResolution": "node"
  },
  "include": ["backend/src/**/*"], // Include all TypeScript files in the backend/src directory
  "exclude": ["node_modules"]
}
